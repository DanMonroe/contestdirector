
<div>
    <h3 style="display: inline">Users</h3>
    {{#paper-button icon-button=true action="transitionTo" param="users.new"}}{{paper-icon icon="add"}}{{/paper-button}}
</div>

<table>
    <thead>
    <tr>
        <th>Name</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each model as |user|}}
        <tr>
            <td>{{link-to user.fullName "users.show" user}}</td>
            <td class="iconBar">
                {{#paper-button icon-button=true action="editUser" param=user}}{{paper-icon icon="edit"}}{{/paper-button}}
                {{#paper-button icon-button=true action="deleteUser" param=user}}{{paper-icon icon="delete"}}{{/paper-button}}
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>





