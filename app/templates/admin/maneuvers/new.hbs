{{#paper-content}}
    <p>
        <h2>Add a New Maneuver</h2>
    </p>
    {{paper-divider}}
    <p>
        <form>
            <h3>{{errorMessage}}</h3>
            <p>
                {{paper-input label="Name" value=model.name required=true required-errortext="Maneuver name is required."}}
            </p>
            <p>
                {{select-2
                content=model.pilotClasses
                value=model.pilotClassId
                placeholder="Select a pilot class"
                allowClear=true
                optionValuePath="id"
                optionLabelPath="name"
                }}
            </p>
            <p>
                {{#paper-button raised=true action="createManeuver"}}Save{{/paper-button}}
                {{#paper-button raised=true action="cancelManeuver"}}Cancel{{/paper-button}}
            </p>
        </form>
    </p>
{{/paper-content}}
