
<div>
    <h3 style="display: inline">Maneuvers</h3>
    {{#paper-button icon-button=true action="transitionTo" param="admin.maneuvers.new"}}{{paper-icon icon="add"}}{{/paper-button}}
</div>
<p>
    {{select-2
        content=model.pilotClasses
        value=selectedItem
        placeholder="Select a pilot class"
        allowClear=true
        optionValuePath="id"
        optionLabelPath="name"
    }}
</p>

<table>
    <thead>
    <tr>
        <th>Maneuver</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each filteredManeuvers as |maneuver|}}
        <tr>
            <td>{{link-to maneuver.name "admin.maneuvers.show" maneuver}}</td>
            <td class="iconBar">
                {{#paper-button icon-button=true action="editManeuver" param=maneuver}}{{paper-icon icon="edit"}}{{/paper-button}}
                {{#paper-button icon-button=true action="deleteManeuver" param=maneuver}}{{paper-icon icon="delete"}}{{/paper-button}}
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>





