{{#paper-content}}
    <p>
    <h2>Add a New Maneuver Set</h2>
    </p>
    {{paper-divider}}
    <p>
        <form>
            <h4>{{errorMessage}}</h4>
    <p>
        {{paper-input label="Name" value=model.name required=true required-errortext="Maneuver set name is required."}}
    </p>
    <p>
        {{select-2
        content=model.pilotClasses
        value=model.pilotClassId
        placeholder="Select a pilot class"
        allowClear=true
        optionValuePath="id"
        optionLabelPath="name"
        }}
    </p>
    <p>
        {{#paper-button raised=true action="createManeuverset"}}Save{{/paper-button}}
        {{#paper-button raised=true action="cancelManeuverset"}}Cancel{{/paper-button}}
    </p>
    </form>
    </p>
{{/paper-content}}
