{{#paper-content}}
    <p>
    <h2>Add a New Pilot Class</h2>
    </p>
    {{paper-divider}}
    <p>
        <form>
            <h4>{{errorMessage}}</h4>
    <p>
        {{paper-input label="Name" value=model.name required=true required-errortext="Pilot Class name is required."}}
    </p>
    <p>
        {{select-2
        content=model.aircrafttypes
        value=model.aircrafttype
        placeholder="Select an aircraft type"
        allowClear=true
        optionLabelPath="name"
        }}
    </p>
    <p>
        {{#paper-button raised=true action="savePilotclass"}}Save{{/paper-button}}
        {{#paper-button raised=true action="cancelPilotclass"}}Cancel{{/paper-button}}
    </p>
    </form>
    </p>
{{/paper-content}}
