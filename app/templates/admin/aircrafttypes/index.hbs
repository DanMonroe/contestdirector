<h3>Aircraft Types</h3>
{{#paper-button icon-button=true action="transitionTo" param="admin.aircrafttypes.new"}}{{paper-icon icon="add"}}{{/paper-button}}

{{paper-input label="Name" value=newAircraftType required=true required-errortext="Aircraft Type name is required." enter="createAircraftType"}}

{{#paper-content classNames="md-whiteframe-z1"}}
    {{#paper-list}}
        {{#each aircrafttypes as |aircrafttype|}}
            {{#paper-item class="md-3-line"}}
                <div class="md-list-item-text">
                    <h3>{{aircrafttype.name}}</h3>
                </div>
            {{/paper-item}}
        {{/each}}
    {{/paper-list}}

    {{#link-to 'admin.aircrafttypes.pilotclasses'}}Pilot Classes{{/link-to}}
    {{outlet}}
{{/paper-content}}

